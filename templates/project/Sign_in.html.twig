
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}Sign in and Sign up Form{% endblock %}</title>
    <link href="{{ asset('css/stylelogin.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/login.css') }}" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

{% block body %}
<div class="container">
    <div class="forms-container">
        <div class="signin-signup">
            <form method="POST" action="{{ path('signInPage') }}" class="sign-in-form">
                <h2 class="title">Sign in</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="email" placeholder="Email" name="email" required />
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" placeholder="Password" name="password" required />
                </div>
                <input type="submit" name="signin" value="Login" class="btn solid" />
                <div class="ahlen">
                    <h3><a href="verification.php">Forgot password?</a></h3>
                </div>
            </form>

         <form method="POST" action="{{ path('signInPage') }}" class="sign-up-form">
    <h2 class="title">Sign up</h2>
    <div class="input-field">
        <i class="fas fa-user"></i>
        <input type="text" name="username" placeholder="Username" required autocomplete="off" />
    </div>
    <div class="input-field">
        <i class="fas fa-envelope"></i>
        <input type="email" name="email" placeholder="Email" id="email" autocomplete="off" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" onblur="checkEmail()" />
    </div>
    <i><span id="email-error" style="color: red; font-weight: bold;"></span></i>
    <div class="input-field">
        <i class="fas fa-envelope "></i>
        <input type="text" name="address" placeholder="Addresse postale" autocomplete="off" />
    </div>
    <div class="input-field">
        <i class="fas fa-mobile"></i>
        <input type="tel" name="mob" placeholder="Mobile Number" id="mob" autocomplete="off" onblur="checkPhone()" />
    </div>
    <span id="phone-error" style="color: red; font-weight: bold;"></span>
    <div class="input-field" id="pw">
        <i class="fas fa-lock" id="icone"></i>
        <input type="password" name="password" placeholder="Password" id="pass" autocomplete="off" onkeyup="checkPassword()" />
        <button type="button" id="show-password-togglel">
            <i class="fas fa-eye"></i>
        </button>
    </div>
    <i><span id="password-error" style="color: #93bfb6; font-weight: bold; font-size:12px; right:1px;"></span></i>
    <div class="input-field" id="pww">
        <i class="fas fa-lock"></i>
        <input type="password" name="confirmpass" placeholder="Confirm password" id="confirmpass" autocomplete="off" onkeyup="checkConPassword()" />
        <button type="button" id="show-cpassword-togglel">
            <i class="fas fa-eye"></i>
        </button>
    </div>
    <i><span id="cpassword-error" style="color: #93bfb6; font-weight: bold; font-size:12px;"></span></i>
    <style>
    select {
        background-color: transparent; /* Rendre le fond transparent */
        border: none; /* Supprimer la bordure */
        outline: none; /* Supprimer le contour */
        appearance: none; /* Supprimer l'apparence par défaut */
        width: 100%;
        
        border: none;
        border-radius: 10px;
        outline: none;
        font-size: 1.8rem;
        font-weight: bold;
        color: #999999;
    }
    .hidden {
        display: none;
}
</style>
    <!-- Ajout du champ "Type d'utilisateur" -->
    <div class="input-field">
        <i class="fas fa-user"></i>
        <select name="userType" id="userType" required>
            <option value="" disabled selected>Choisissez le type d'utilisateur</option>
            <option value="patient">Patient</option>
            <option value="medecin">Médecin</option>
        </select>
    </div>
     <!-- Champs spécifiques aux patients -->
    <div class="input-field patient-fields hidden">
        <i class="fas fa-id-card"></i>
        <input type="text" name="patientId" placeholder="Identifiant du patient" autocomplete="off" />
    </div>
    <!-- Champs spécifiques aux médecins -->
    <div class="input-field medecin-fields hidden">
        <i class="fas fa-stethoscope"></i>
        <input type="text" name="medecinSpecialite" placeholder="Spécialité du médecin" autocomplete="off" />
    </div>
    
    <input type="submit" name="signup" class="btn" value="Sign up" />
</form>

        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>New here?</h3>
                <p>Welcome! Sign up to access all features. Already have an account? Enter your information.</p>
                <button class="btn transparent" id="sign-up-btn">Sign up</button>
                <a href="{{ path('homePage') }}"><button class="btn transparent">Home</button></a>
            </div>
            <!--<img src="images/House_searching.svg" class="image" alt="" />-->
        </div>
        <div class="panel right-panel">
            <div class="content">
                <h3>One of us?</h3>
                <p>Welcome to our  community! Join us by creating an account to access all the features we offer.
                    Already a member? Great! Sign in to continue your practice.</p>
                <button class="btn transparent" id="sign-in-btn">Sign in</button>
                <a href="{{ path('homePage') }}"><button class="btn transparent">Home</button></a>
            </div>
            <!--<img src="images/buy_house.svg" class="image" alt="" />-->
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/app.js') }}"></script>
<script src="{{ asset('js/control.js') }}"></script>
<script src="{{ asset('js/form.js') }}"></script>
{% endblock %}
